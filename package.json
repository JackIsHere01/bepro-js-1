{
    "name": "bepro-js",
    "version": "2.0.0-alpha.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": "14.17.0"
    },
    "directories": {
        "test": "test",
        "lib": "src-ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/betprotocol/bepro-js.git"
    },
    "scripts": {
        "compile": "truffle compile",
        "prebuild": "npm run compile",
        "pretest": "npm run build && truffle compile && truffle migrate --network development",
        "prepublishOnly": "npm run build",
        "test:js": "mocha --bail --timeout 60000 --exit --require ts-node/register --require tsconfig-paths/register 'test-ts/**/*.spec.{ts,tsx}' --pretty",
        "test:truffle": "npm run truffle -- test --network development ./tests/contracts/erc20TokenLock-truffle.js",
        "build": "npm run compile && babel ./src --out-dir lib --copy-files -d ./build",
        "build-ts": "tsc && tsc-alias",
        "docs": "typedoc",
        "clean:contracts": "rimraf build/contracts && ./node_modules/.bin/truffle compile",
        "ganache:start": "ganache-cli -p 8545 -q"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^3.4.2",
        "@uniswap/v3-core": "^1.0.0",
        "@uniswap/v3-periphery": "^1.1.1",
        "accounting": "^0.4.1",
        "dotenv": "^8.2.0",
        "ipfs-http-client": "^50.0.0",
        "web3": "^1.6.1"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@types/yargs": "^17.0.7",
        "chai": "^4.3.4",
        "change-case": "^4.1.2",
        "mocha": "^9.1.3",
        "mocha-multi-reporters": "^1.5.1",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typedoc": "^0.22.10",
        "typescript": "4.5.3",
        "yargs": "^17.3.0",
        "tsc-alias": "^1.5.0",
        "change-case": "^4.1.2",
        "truffle": "^5.4.3",
        "truffle-assertions": "^0.8.2",
        "truffle-plugin-verify": "^0.5.8",
        "ganache-time-traveler": "^1.0.5",
        "ganache-cli": "^6.12.2",
        "@truffle/hdwallet-provider": "^2.0.0"
    },
    "author": "",
    "license": "ISC"
}
